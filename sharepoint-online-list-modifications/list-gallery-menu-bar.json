{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
    "height": 52,
    "width": 1600,
    "hideSelection": true,
    "fillHorizontally": false,
    "formatter": {
      "elmType": "div",
      "style": {
        "display": "flex",
        "align-items": "stretch",
        "height": "100%",
        "padding": "4px",
        "box-sizing": "border-box"
      },
      "children": [
        {
          "elmType": "button",
          "customRowAction": {
            "action": "defaultClick"
          },
          "attributes": {
            "class": "ms-Button ms-Button--primary",
            "title": "[$Title]"
          },
          "style": {
            "width": "100%",
            "border-radius": "20px",
            "border": "none",
            "cursor": "pointer",
            "text-align": "left",
            "padding": "10px 16px",
            "box-sizing": "border-box",
            "outline": "none"
          },
          "children": [
            {
              "elmType": "span",
              "attributes": {
                "class": "ms-Button-label"
              },
              "txtContent": "=if([$Title] == '', '-', [$Title])"
            }
          ]
        }
      ]
    }
  }
  